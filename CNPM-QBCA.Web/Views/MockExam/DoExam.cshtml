@model CNPM_QBCA.Models.MockExamViewModel
@{
    ViewBag.Title = "Do Mock Exam";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="mock-exam-container">
    <div class="exam-header text-center mb-4">
        <h2>📝 Do Mock Exam</h2>
        <h4>@Model.Title</h4>
        <p><strong>Instructions:</strong> @Model.Instructions</p>
    </div>

    <form asp-action="Submit" asp-controller="MockExam" method="post">
        <input type="hidden" name="examId" value="@Model.ExamId" />

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var q = Model.Questions[i];
            <div class="question-block">
                <div class="question-title">Question @(i + 1): @q.Content</div>

                <div class="option"><input type="radio" name="answers[@i]" value="A" required /> A. @q.OptionA</div>
                <div class="option"><input type="radio" name="answers[@i]" value="B" /> B. @q.OptionB</div>
                <div class="option"><input type="radio" name="answers[@i]" value="C" /> C. @q.OptionC</div>
                <div class="option"><input type="radio" name="answers[@i]" value="D" /> D. @q.OptionD</div>
            </div>
        }

        <div class="submit-container text-center mt-4">
            <button type="submit" class="submit-btn">Submit</button>
        </div>
    </form>
</section>

<style>
    section.mock-exam-container {
        max-width: 880px;
        margin: 0 auto;
        padding: 40px 24px 60px 24px;
    }

    .question-block {
        margin-bottom: 30px;
        padding: 24px;
        border-radius: 18px;
        background: #f2f3f7;
        box-shadow: 6px 6px 12px #d1d9e6, -6px -6px 12px #ffffff;
    }

    .question-title {
        font-weight: 600;
        margin-bottom: 14px;
        font-size: 1.2rem;
    }

    .option {
        margin-left: 16px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        font-size: 1.05rem;
    }

        .option input[type="radio"] {
            margin-right: 8px;
            transform: scale(1.15);
        }

    .submit-btn {
        padding: 12px 32px;
        background-color: #4F46E5;
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        font-size: 1.05rem;
        box-shadow: 4px 4px 10px #c4c9db, -4px -4px 10px #fff;
        transition: background-color 0.25s ease;
    }

        .submit-btn:hover {
            background-color: #3730A3;
        }
</style>
