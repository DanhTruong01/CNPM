@model List<QBCA.Models.ReviewExam>
@{
    ViewBag.Title = "Review Exams";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="center-container">
    <div class="neumorphic-card">
        <h2 class="header-text">✔️ Exams Pending Review</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center" style="font-size: 18px;">
                <i> ❗No exams submitted for review yet..
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Subject</th>
                        <th>Lecturer</th>
                        <th>Submitted</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model)
                    {
                        <tr>
                            <td>@exam.ExamTitle</td>
                            <td>@exam.SubjectName</td>
                            <td>@exam.LecturerName</td>
                            <td>@exam.SubmittedDate.ToShortDateString()</td>
                            <td>
                                @if (exam.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (exam.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="ExamReview"
                                   asp-action="ReviewDetails"
                                   asp-route-id="@exam.Id"
                                   class="neumorphic-button btn-sm">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- CSS giữ nguyên như các view neumorphic bạn đã dùng -->
