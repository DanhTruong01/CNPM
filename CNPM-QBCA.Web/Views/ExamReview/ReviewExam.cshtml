@model IEnumerable<QBCA.Models.ReviewExam>
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm rounded-4">
        <h2 class="text-primary mb-3">Exam Reviews</h2>
        @if (!Model.Any())
        {
            <div class="alert alert-info">No reviews available.</div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Reviewer</th>
                        <th>Exam Plan</th>
                        <th>Distribution</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th>Reviewed At</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Reviewer?.FullName</td>
                            <td>@item.ExamPlan?.Name</td>
                            <td>@item.Distribution?.DifficultyLevel?.LevelName</td>
                            <td><span class="badge bg-info text-dark">@item.Status</span></td>
                            <td>@item.DueDate?.ToString("dd/MM/yyyy")</td>
                            <td>@item.ReviewedAt.ToString("dd/MM/yyyy")</td>
                            <td>@item.Comment</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
