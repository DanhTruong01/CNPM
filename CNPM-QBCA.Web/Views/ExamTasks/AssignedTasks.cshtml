@model List<QBCA.Models.ExamAssignment>

@{
    ViewBag.Title = "Assigned Tasks";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="center-container">
    <div class="neumorphic-card">
        <h2 class="header-text">Assigned Exam Tasks</h2>

        <a href="@Url.Action("Create", "ExamTasks")" class="neumorphic-button">
            Assign New Task
        </a>

        @if (!Model.Any())
        {
            <p class="empty-msg">No exam tasks assigned yet.</p>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Title</th>
                        <th>Deadline</th>
                        <th>Reviewed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.LecturerName</td>
                            <td>@task.ExamTitle</td>
                            <td>@task.Deadline.ToShortDateString()</td>
                            <td>@(task.IsReviewed ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<style>
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 75vh;
    }

    .neumorphic-card {
        background: #f2f3f7;
        padding: 40px 35px;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        max-width: 650px;
        width: 100%;
        text-align: center;
    }

    .header-text {
        font-weight: 700;
        font-size: 1.7rem;
        margin-bottom: 25px;
        color: #2a2a2a;
    }

    .neumorphic-button {
        display: inline-block;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        border-radius: 12px;
        background: #5f4dee;
        color: white;
        box-shadow: 3px 3px 8px rgba(0,0,0,0.1);
        margin-bottom: 25px;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .neumorphic-button:hover {
            background-color: #3d34a5;
        }

    .empty-msg {
        font-size: 1rem;
        color: #666;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        font-size: 0.95rem;
    }

        .styled-table thead tr {
            background-color: #4F46E5;
            color: white;
        }

        .styled-table th,
        .styled-table td {
            padding: 10px 12px;
            border-bottom: 1px solid #ddd;
        }
</style>
