@using QBCA.Models
@model ExamApproveTask

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Review & Approve Exam";
}

<div class="container mt-5">
    <div class="card shadow p-4 rounded-4" style="background: #f0f0f3;">

        <h2 class="text-center mb-4" style="font-weight: bold; color: #333;">✔️  Approve Exam</h2>

        @if (ViewBag.NoData == true)
        {
            <div class="alert alert-info text-center" style="font-size: 18px;">
                <i> ❗No exams submitted for approve yet..
            </div>
        }
        else
        {
            <div class="row mb-4">
                <div class="col-md-6"><strong>📄 Exam Title:</strong> @Model.ExamTitle</div>
                <div class="col-md-6"><strong>📚 Subject:</strong> @Model.SubjectName</div>
                <div class="col-md-6"><strong>👤 Reviewer:</strong> @Model.Reviewer</div>
                <div class="col-md-6"><strong>🗓 Due Date:</strong> @Model.DueDate.ToString("dd/MM/yyyy")</div>
            </div>

            <form asp-action="ApproveUpdate" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Feedback" class="form-label">💬 Feedback</label>
                    <textarea asp-for="Feedback" class="form-control rounded-3 shadow-sm" rows="4" style="resize: vertical;"></textarea>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Status" class="form-label">🔧 Status</label>
                    <select asp-for="Status" class="form-select rounded-3 shadow-sm">
                        <option value="Approved">Approved</option>
                        <option value="Needs Correction">Needs Correction</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary rounded-3 px-4 me-2">✅ Cập nhật</button>
                    <a href="@Url.Action("Index", "ExamApprove")" class="btn btn-outline-secondary rounded-3 px-4">⬅️ Quay lại</a>
                </div>
            </form>
        }
    </div>
</div>
