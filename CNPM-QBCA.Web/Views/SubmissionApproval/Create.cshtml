@model QBCA.ViewModels.SubmissionApprovalViewModel
@{
    ViewBag.Title = "Approve Submission";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
    .neumorphic-box {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 40px;
        max-width: 600px;
        margin: 100px auto;
    }

    .neumorphic-label {
        font-weight: 600;
        color: #36395A;
        margin-bottom: 5px;
        display: block;
    }

    .neumorphic-input, .neumorphic-select {
        width: 100%;
        padding: 12px;
        border-radius: 12px;
        border: none;
        margin-bottom: 20px;
        background: #f2f3f7;
        box-shadow: inset 6px 6px 10px #d1d9e6, inset -6px -6px 10px #ffffff;
    }

    .neumorphic-button {
        width: 100%;
        padding: 12px;
        border-radius: 12px;
        background-color: #4F46E5;
        color: white;
        font-weight: bold;
        border: none;
        transition: background 0.3s;
    }

        .neumorphic-button:hover {
            background-color: #3730A3;
        }
</style>

<div class="neumorphic-box">
    <h3 class="text-center mb-4" style="color:#4F46E5;">Approve Submission</h3>
    @using (Html.BeginForm("Approve", "SubmissionApproval", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <label class="neumorphic-label">Submission</label>
        @Html.DropDownListFor(m => m.SubmissionTableID,
        new SelectList(Model.AllSubmissions, "SubmissionID", "ExamPlan.Name"),
        "Select Submission",
        new { @class = "neumorphic-select" })

    <label class="neumorphic-label">Approved By</label>
    @Html.DropDownListFor(m => m.ApprovedByID,
        new SelectList(Model.AllApprovers, "UserID", "FullName"),
        "Select Approver",
        new { @class = "neumorphic-select" })

    <label class="neumorphic-label">Status</label>
    @Html.TextBoxFor(m => m.Status, new { @class = "neumorphic-input", placeholder = "e.g. Approved / Rejected / Pending" })

    <button type="submit" class="neumorphic-button">Submit Approval</button>
        }
</div>
