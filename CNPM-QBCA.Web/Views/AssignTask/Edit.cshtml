@model QBCA.ViewModels.AssignTaskViewModel
@{
    ViewBag.Title = "Edit Task";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .neumorphic-form {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 40px;
        margin: 50px auto;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
        color: #36395A;
    }

    input[type="text"],
    input[type="date"],
    select {
        width: 100%;
        padding: 12px 15px;
        border-radius: 12px;
        border: none;
        box-shadow: inset 5px 5px 10px #d1d9e6, inset -5px -5px 10px #ffffff;
        background: #f2f3f7;
    }

    .btn-update {
        background: #10b981;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 15px;
        font-weight: 600;
        box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
        transition: 0.3s ease;
        width: 100%;
    }

        .btn-update:hover {
            background: #059669;
            cursor: pointer;
        }

    .text-danger {
        font-size: 0.9em;
        color: red;
        margin-top: 4px;
        display: block;
    }
</style>

<div class="neumorphic-form">
    <h3 style="color: #059669; font-weight: bold; margin-bottom: 30px;">Edit Task</h3>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TaskID" />

        <div class="form-group">
            <label asp-for="TaskType"></label>
            <input asp-for="TaskType" class="form-control" />
            <span asp-validation-for="TaskType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AssignedToID"></label>
            <select asp-for="AssignedToID" class="form-control" asp-items="@(new SelectList(Model.AllLecturers, "UserID", "FullName", Model.AssignedToID))">
                <option value="">-- Select Lecturer --</option>
            </select>
            <span asp-validation-for="AssignedToID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Deadline"></label>
            <input asp-for="Deadline" type="date" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
                <option value="Assigned" selected="@(Model.Status == "Assigned")">🔵 Assigned</option>
                <option value="InProgress" selected="@(Model.Status == "InProgress")">🟡 In Progress</option>
                <option value="Completed" selected="@(Model.Status == "Completed")">🟢 Completed</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-update">Update Task</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
