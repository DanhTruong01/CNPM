@model QBCA.ViewModels.AssignTaskViewModel
@{
    ViewBag.Title = "Create New Task";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .neumorphic-form {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 50px;
        margin: 60px auto;
        max-width: 700px;
        font-size: 18px; 
    }

    .form-group {
        margin-bottom: 30px;
    }

    label {
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 12px;
        display: block;
        color: #36395A;
    }

    input[type="text"],
    input[type="date"],
    select {
        width: 100%;
        padding: 18px 20px;
        border-radius: 14px;
        border: none;
        box-shadow: inset 6px 6px 10px #d1d9e6, inset -6px -6px 10px #ffffff;
        background: #f2f3f7;
        font-size: 18px;
    }

   
    input::placeholder {
        font-size: 18px;
        font-weight: 500;
        color: #999;
    }

    .btn-create {
        background: #4F46E5;
        color: white;
        padding: 18px;
        border: none;
        border-radius: 15px;
        font-weight: 700;
        font-size: 18px;
        box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
        transition: 0.3s ease;
        width: 100%;
    }

        .btn-create:hover {
            background: #3730A3;
            cursor: pointer;
        }

    .text-danger {
        font-size: 1.1em;
        color: red;
        margin-top: 6px;
        display: block;
    }

    h3 {
        color: #4F46E5;
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 35px;
        text-align: center;
    }
</style>

<div class="neumorphic-form">
    <h3>🆕 Create New Task</h3>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="TaskType"></label>
            <input asp-for="TaskType" class="form-control" placeholder="Enter task title..." />
            <span asp-validation-for="TaskType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AssignedToID"></label>
            <select asp-for="AssignedToID" class="form-control" asp-items="@(new SelectList(Model.AllLecturers, "UserID", "FullName"))">
                <option value="">-- Select Lecturer --</option>
            </select>
            <span asp-validation-for="AssignedToID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Deadline"></label>
            <input asp-for="Deadline" type="date" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-create">✅ Create Task</button>
    </form>
</div>
