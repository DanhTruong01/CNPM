@model IEnumerable<QBCA.ViewModels.AssignTaskViewModel>
@{
    ViewBag.Title = "Assigned Tasks";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .neumorphic-table {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 30px;
        margin: 40px auto;
        max-width: 95%;
    }

    .badge {
        padding: 6px 14px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: bold;
    }

        .badge.assigned {
            background-color: #e0f2fe;
            color: #1e3a8a;
        }

        .badge.inprogress {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge.completed {
            background-color: #d1fae5;
            color: #065f46;
        }

    select {
        padding: 6px 12px;
        border-radius: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 14px 18px;
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #e0e5ec;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9fc;
    }

    .action-links a {
        margin: 0 5px;
        text-decoration: none;
        font-weight: 500;
    }

    .btn-create {
        background: #4F46E5;
        color: white;
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: bold;
        border: none;
        text-decoration: none;
        float: right;
        margin-bottom: 20px;
        box-shadow: 4px 4px 10px #d1d9e6, -4px -4px 10px #ffffff;
    }

        .btn-create:hover {
            background: #3730A3;
        }
</style>

<div class="neumorphic-table">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h3 style="color: #4F46E5; font-weight: bold;">Assigned Tasks</h3>
        <a href="@Url.Action("Create", "AssignTask")" class="btn-create">+ Create New Task</a>
    </div>

    <form method="get" asp-action="Task">
        <label for="assignedTo">Filter by Lecturer:</label>
        <select name="assignedTo" onchange="this.form.submit()">
            <option value="">-- All Lecturers --</option>
            @foreach (var name in ViewBag.AllLecturers as List<string>)
            {
                <option value="@name" @(Context.Request.Query["assignedTo"] == name ? "selected" : "")>@name</option>
            }
        </select>
    </form>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Task Title</th>
                <th>Assigned To</th>
                <th>Status</th>
                <th>Deadline</th>
                <th>Assigned At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.TaskType</td>
                        <td>@item.AssignedToName</td>
                        <td>
                            <span class="badge @item.Status.ToLower()">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.Deadline.ToString("dd/MM/yyyy")</td>
                        <td>@item.AssignedAt.ToString("dd/MM/yyyy")</td>
                        <td class="action-links">
                            <a href="@Url.Action("Edit", "AssignTask", new { id = item.TaskID })">✏️ Edit</a>
                            <a href="@Url.Action("Details", "AssignTask", new { id = item.TaskID })">👁 Details</a>
                            <a href="@Url.Action("Delete", "AssignTask", new { id = item.TaskID })" style="color:red;">❌ Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        No tasks assigned.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
